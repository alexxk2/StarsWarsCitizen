<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <!-- <item name="itemIconTint">@color/bnb_tab_color</item>
         <item name="itemTextColor">@color/bnb_tab_color</item>-->
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

        <item name="colorPrimary">@color/blue</item>
        <item name="colorSurface">@color/light_grey</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
        <item name="android:color">@color/light_blue</item>
    </style>

    <style name="Material3CustomTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorSecondaryContainer">@color/light_blue</item>
        <item name="colorSurface">@color/white</item>
        <!--switch thumb and track colors unchecked -->
        <!--<item name="colorOnSurface">@color/soft_blue</item>-->
    </style>

    <style name="CustomConstraint">
        <item name="android:background">@color/white</item>
    </style>

    <!--Search screen-->
    <style name="CustomLayoutText">
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_clear</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="CustomEditText">
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">0dp</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageViewNotFound">
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_death_star</item>
    </style>

    <style name="ImageViewIntro">
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_r2d2</item>
    </style>

    <style name="ImageViewError">
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_dart_vader</item>
    </style>

    <!--Search item-->

    <style name="AvatarImage">
       <item name="android:padding">8dp</item>
    </style>

    <style name="AddToFavouriteButton">
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_add_to_favourite</item>
    </style>


</resources>